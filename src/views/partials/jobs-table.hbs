{{#if user.jobs }}
  <table class="mb-40 ft-24">
    <tr>
      <th>Job</th>
      <th>Date Started</th>
      <th>Date Ended</th>
      <th>Role</th>
      <th></th>
    </tr>
    {{#each user.jobs as | job | }}
      <tr>
        <td>{{job.name}}</td>
        <td>{{job.dateStarted}}</td>
        <td>{{job.dateEnded}}</td>
        <td>{{job.role}}</td>
        <td class="flex">
          <div class="button-border orange-gradient">
            <button class="button edit-job-button small-button">Edit</button>
          </div>
          <div class="button-border red-gradient">
            <button class="button delete-job-button small-button" data-job="{{job.id}}">Delete</button>
          </div>
        </td>
      </tr>
    {{/each}}
  </table>
{{/if}}
