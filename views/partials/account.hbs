<div class="admin-content active ml-40 w-100">
  <div class="admin-titles flex">
    <h1 class="admin-title ft-38">Account</h1>
    <h2 class="admin-role ml-40 ft-18">{{user.role}}</h2>
  </div>
  <form class="relative" action="update-account" id="update-account" data-user="{{user.id}}">
    <div class="account-email flex flex-col">
      <label class="input-label" for="email">Email</label>
      <div class="input-border orange-gradient mt-20">
        <input class="input-text" type="email" name="email" id="email" value="{{user.email}}">
      </div>
    </div>
    <div class="button-border purple-gradient absolute save-button">
      <button id="account-button" class="button">Save</button>
    </div>
  </form>
</div>
