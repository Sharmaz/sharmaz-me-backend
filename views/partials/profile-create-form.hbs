<form class="relative d-none" action="" id="create-profile-form">
  <div class="flex flex-col">
    <label class="input-label" for="name">Name</label>
    <input class="input-text mt-20" type="text" name="name" id="name" value="Your name">
    <label class="input-label mt-20" for="about">About</label>
    <textarea class="mt-20 ft-18" name="about" id="" cols="30" rows="10">About you</textarea>
    <label class="input-label mt-20" for="profile_pic_url">Profile Pic URL</label>
    <input class="input-text mt-20" type="text" name="profile_pic_url" id="profile_pic_url" value="https://your-photo.com">
    <label class="input-label mt-20" for="blog_url">Blog URL</label>
    <input class="input-text mt-20" type="text" name="blog_url" id="blog_url" value="https://your-blog.com">
    <label class="input-label mt-20" for="github_url">Github URL</label>
    <input class="input-text mt-20" type="text" name="github_url" id="github_url" value="https://github.com/[you]">
    <label class="input-label mt-20" for="linkedin_url">LinkedIn URL</label>
    <input class="input-text mt-20" type="text" name="linkedin_url" id="linkedin_url" value="https://linkedin.com/[you]">
    <label class="input-label mt-20" for="twitter_url">Twitter URL</label>
    <input class="input-text mt-20" type="text" name="twitter_url" id="twitter_url" value="https://twitter.com/[you]">
  </div>
  <button id="profile-create-button" class="button absolute top-0 right-0">Create Profile</button>
</form>
