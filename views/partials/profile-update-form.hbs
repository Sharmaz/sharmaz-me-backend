<form class="relative pb-40" action="update-profile" id="update-profile" data-profile="{{user.profile.id}}">
  <div class="flex flex-col">
    <label class="input-label" for="name">Name</label>
    <div class="input-border orange-gradient mt-20">
      <input class="input-text" type="text" name="name" id="name" value="{{user.profile.name}}">
    </div>
    <label class="input-label mt-20" for="about">About</label>
    <div class="text-area-border orange-gradient mt-20">
      <textarea class="text-area ft-18" name="about" id="" cols="30" rows="10">{{user.profile.about}}</textarea>
    </div>
    <label class="input-label mt-20" for="profile_pic_url">Profile Pic URL</label>
    <div class="input-border orange-gradient mt-20">
      <input class="input-text" type="text" name="profile_pic_url" id="profile_pic_url" value="{{user.profile.profilePic}}">
    </div>
    <label class="input-label mt-20" for="resume_url">Resume URL</label>
    <div class="input-border orange-gradient mt-20">
      <input class="input-text" type="text" name="resume_url" id="resume_url" value="{{user.profile.resume}}">
    </div>
    <label class="input-label mt-20" for="blog_url">Blog URL</label>
    <div class="input-border orange-gradient mt-20">
      <input class="input-text" type="text" name="blog_url" id="blog_url" value="{{user.profile.blog}}">
    </div>
    <label class="input-label mt-20" for="github_url">Github URL</label>
    <div class="input-border orange-gradient mt-20">
      <input class="input-text" type="text" name="github_url" id="github_url" value="{{user.profile.github}}">
    </div>
    <label class="input-label mt-20" for="linkedin_url">LinkedIn URL</label>
    <div class="input-border orange-gradient mt-20">
      <input class="input-text" type="text" name="linkedin_url" id="linkedin_url" value="{{user.profile.linkedIn}}">
    </div>
    <label class="input-label mt-20" for="twitter_url">Twitter URL</label>
    <div class="input-border orange-gradient mt-20">
      <input class="input-text" type="text" name="twitter_url" id="twitter_url" value="{{user.profile.twitter}}">
    </div>
  </div>
  <div class="button-border purple-gradient absolute save-button">
    <button id="profile-button" class="button">Save</button>
  </div>
  <div class="button-border red-gradient absolute right-0">
    <button id="delete-profile-button" class="button" data-profile="{{user.profile.id}}">Delete Profile</button>
  </div>
</form>
