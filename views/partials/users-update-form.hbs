{{#if users}}
  {{#each users as | user | }}
    <form class="relative edit-user-form d-none" action="" data-user="{{user.id}}">
      <div class="flex flex-col">
        <label class="input-label mt-20" for="email">Email</label>
        <div class="input-border orange-gradient mt-20">
          <input class="input-text" type="email" name="email" id="email" value="{{user.email}}">
        </div>
        <label class="input-label mt-20" for="role">Role</label>
        <div class="input-border orange-gradient mt-20">
          <select class="input-select select-role" name="role" id="role">
            <option value="{{user.role}}">Choose an option</option>
            <option value="user">User</option>
            <option value="admin">Admin</option>
          </select>
        </div>
      </div>
      <div class="button-border purple-gradient absolute top-0 right-0">
        <button class="button update-user-button">Save</button>
      </div>
    </form>
  {{/each}}
{{/if}}
